<%= simple_form_for @book do |f| %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Виберіть категорію") %>
<%= f.input :title, label: "Назва Книги" %>
<%= f.input :description, label: "Опис" %>
<%= f.input :author, label: "Автор" %>
<%= f.submit "Додати Книгу" %>
<% end %>