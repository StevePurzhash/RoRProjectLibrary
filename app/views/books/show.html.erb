
<div class="row">

<div class="col-md-4">

<%= image_tag @book.book_img.url(:book_show), class: "book-show"%>

</div>

<div class="col-md-8"></div>
	<h2><%= @book.title %></h2>
	<h3><%= @book.author %></h3>
	<p><%= @book.description %></p>

</div>

<div class="row">
	<div class="col-md-4">
		
		<!-- ratings -->
		<%= render @book.reviews %>

		<div>
			<%= link_to "Додати відгук", new_book_review_path(@book), class: "btn-custom" %>
		</div>
	</div>
</div>


<%= link_to "Назад",  root_path %>

<% if user_signed_in? %>

<% if @book.user_id == current_user.id %>

	<%= link_to "Редагувати", edit_book_path(@book) %>
	<%= link_to "Видалити", book_path(@book), method: :delete, data:{confirm: "Ви впевнені?" } %>


	<% end %>
	<% end %>
